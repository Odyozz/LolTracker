  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node"]          // ðŸ”¥ pour que 'process' & co soient connus
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
